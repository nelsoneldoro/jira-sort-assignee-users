{
  "manifest_version": 3,
  "name": "JIRA - Sort and filter assigned users",
  "version": "1.0.1",
  "description": "When the Show More users popper is opened, the users are sorted and a search filter is added at top.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://*.atlassian.net/jira/software/projects*"
      ]
    }
  ]
}